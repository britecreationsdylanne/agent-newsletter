# BriteCo Brief - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (required for content generation)
OPENAI_API_KEY=sk-...

# Perplexity API Key (required for research)
PERPLEXITY_API_KEY=pplx-...

# Anthropic API Key (optional, for Claude-based content)
ANTHROPIC_API_KEY=sk-ant-...

# Google AI API Key (required for Gemini image generation)
# Get this from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=AIza...

# Default Image Model (optional, defaults to gemini-2.5-flash-image)
DEFAULT_IMAGE_MODEL=gemini-2.5-flash-image

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
